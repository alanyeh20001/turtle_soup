<div id="devise-registrations-new">
  <div class="title">
    <h1>註冊</h1>
  </div>

  <div class="form-wrapper">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, required: true %>
      </div>

      <div class="field">
        <%= f.label :名字 %><br />
        <%= f.text_field :name, autofocus: true, required: true %>
      </div>

      <div class="field">
        <%= f.label :密碼 %>
        <% if @minimum_password_length %>
        <em>(最短 <%= @minimum_password_length %> 個字)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", required: true %>
      </div>

      <div class="field">
        <%= f.label :密碼確認 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
      </div>

      <div class="actions">
        <%= f.submit "送出" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
